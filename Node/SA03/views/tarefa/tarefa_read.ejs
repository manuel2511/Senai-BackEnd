<%- include('../header') %>
<div class="container-fluid">
    <!-- Page Heading -->
                   <h1 class="h3 mb-2 text-gray-800">Listagem de Tarefas</h1>
                   <!-- DataTales Example -->
                   <div class="card shadow mb-4">
                       <div class="card-body">
                           <div class="table-responsive">
                            <!-- Barra de pesquisa na tabela. -->
                            <form class="d-flex mb-3" action="/tarefa.search" method="POST">
                              <input class="form-control me-2" type="text" name="search" placeholder="Pesquisa..." value="<%= search %>">
                              <button class="btn btn-primary ml-2" type="submit" name="submit"> <i class="fas fa-search me-1"></i> </button>
                            <!-- Fim da Barra de pesquisa na tabela. -->

                            <!-- Listagem -->
                            </form>
                               <table class="table table-bordered small" id="dataTable" width="100%" cellspacing="0">
                                   <thread>
                                       <tr>
                                           <th>Código</th>
                                           <th>Descrição</th>
                                           <th>Status</th>
                                           <th>Data de Início</th>
                                           <th>Data de Término</th>
                                           <th>Editar</th>
                                           <th>Excluir</th>
                                           
                                       </tr>
                                   </thread>
                                   <tbody>
                                    <% if ( tarefa !='' ) { tarefa.forEach((row, index)=> { %>
                                        <tr class="align-middle">
                                          <td>
                                            <%= row.id %>
                                          </td>
                                          <td>
                                            <%= row.descricao %>
                                          </td>
                                          <td>
                                            <%= row.status %>
                                          </td>
                                          <td>
                                            <%= row.dataCadastro %>
                                          </td>
                                          <td>
                                            <%= row.dataFinalizado %>
                                          </td>
                                          <td>
                                              <a href="tarefa/update/<%= row.id %>" class="text-success ml-2">
                                                <i class="fas fa-edit fa-lg mx-1"></i></a>
                                          </td>
                                          <td>
                                              <a href="tarefa/delete/<%= row.id %>" class="text-danger ml-2">
                                                <i class="fas fa-trash-alt fa-lg mx-1"></i></a>
                                          </td>
                                          </td>
                                        </tr>
                                        <% }) } %>
                                    </tbody>
                               </table>
                           </div>
                       </div>
                   </div>
</div>
<%- include('../footer') %>